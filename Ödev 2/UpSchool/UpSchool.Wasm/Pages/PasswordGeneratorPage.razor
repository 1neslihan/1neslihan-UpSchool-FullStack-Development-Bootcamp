    body {
        background: #393E46
    }

    .activeButton{
        border: none;
        background-color: transparent;
    }

    .activeButton:hover{
            text-shadow: 1px 1px 2px #E90064;
    }    
    
    .deactiveButton{
        border:none;
        background-color:transparent;
        opacity:0.5;
    }


